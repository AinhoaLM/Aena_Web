<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.eu5.ainhoalm.airportAena.model">
	<class name="" table="Airport">
		<id name="id" column="id">
			<!-- para generar desde código el id autonumérico en vez de en clase -->
			<generator class="increment" />
		</id>
		<property name="Icao"/>
		<property name="Description" />	
		<property name="NGates"/>
		<set name="gates" table="gate" lazy="false">
            <key>
                <column name="idAirport" not-null="true"></column>
            </key>
            <one-to-many class="Gate"/>
        </set>
    
		
	</class>
</hibernate-mapping>